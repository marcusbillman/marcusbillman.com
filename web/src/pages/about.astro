---
import ContactSection from '@/components/sections/ContactSection';
import DesignerDeveloperSection from '@/components/sections/DesignerDeveloperSection';
import FullBioSection from '@/components/sections/FullBioSection';
import HeaderSection from '@/components/sections/HeaderSection';
import SeparatorSection from '@/components/sections/SeparatorSection';
import SkillsSection from '@/components/sections/SkillsSection';
import Layout from '@/layouts/Layout.astro';
import t from '@/utils/i18n';
---

<Layout title={t('about.title')}>
  <HeaderSection
    slot="header"
    client:load
    title={t('about.heading')}
    emoji={['🤔', '🧑‍🎨', '💎', '🧠', '🔎']}
  />
  <FullBioSection />
  <DesignerDeveloperSection client:visible />
  <SkillsSection />
  <SeparatorSection />
  <ContactSection client:visible />
</Layout>
