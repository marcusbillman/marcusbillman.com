---
import Button from '@/components/Button';
import DotGrid from '@/components/DotGrid';
import { LinkedIn } from '@/components/icons';
import Layout from '@/layouts/Layout.astro';
import {
  Copy,
  EnvelopeSimple,
  PaperPlaneTilt,
} from '@phosphor-icons/react/dist/ssr';
import CopyToClipboard from 'react-copy-to-clipboard';

const EMAIL = 'hello@marcusbillman.com';
---

<Layout title="About me" noHeader>
  <section
    class="flex min-h-[75vh] flex-col items-center justify-center px-4 lg:p-32"
  >
    <h1 class="text-balance text-center text-5xl lg:text-8xl">
      Letâ€™s get in touch! ðŸ’¬
    </h1>
    <Button
      text="Open contact form"
      icon={PaperPlaneTilt}
      style="primary"
      className="mt-16"
    />
    <span class="mt-6 text-xl text-subtle">or</span>
    <div class="mt-6 flex w-full max-w-5xl flex-col gap-4 md:flex-row lg:gap-8">
      <div
        class="flex flex-col gap-4 rounded-2xl border border-default bg-default p-4 md:flex-1 lg:p-6"
      >
        <div class="flex items-center gap-2">
          <EnvelopeSimple size={24} className="lg:hidden" />
          <EnvelopeSimple size={32} className="hidden lg:block" />
          <span class="text-xl font-medium lg:text-2xl">{EMAIL}</span>
        </div>
        <div class="flex gap-2 lg:gap-3">
          <CopyToClipboard text={EMAIL}>
            <Button
              text="Copy"
              icon={Copy}
              size="small"
              className="lg:hidden"
            />
            <Button
              text="Copy"
              icon={Copy}
              size="medium"
              className="hidden lg:flex"
            />
          </CopyToClipboard>
          <Button
            text="Open"
            href={`mailto:${EMAIL}`}
            style="subtle"
            size="small"
            className="lg:hidden"
          />
          <Button
            text="Open"
            href={`mailto:${EMAIL}`}
            style="subtle"
            size="medium"
            className="hidden lg:flex"
          />
        </div>
      </div>
      <div
        class="flex flex-col gap-4 rounded-2xl border border-default bg-default p-4 md:flex-1 lg:p-6"
      >
        <div class="flex items-center gap-2">
          <LinkedIn size={24} className="lg:hidden" />
          <LinkedIn size={32} className="hidden lg:block" />
          <span class="text-xl font-medium lg:text-2xl">LinkedIn</span>
        </div>
        <div class="flex gap-2 lg:gap-3">
          <Button
            text="Visit profile"
            href={`https://m-b.me/linkedin`}
            style="subtle"
            size="small"
            className="lg:hidden"
          />
          <Button
            text="Visit profile"
            href={`https://m-b.me/linkedin`}
            style="subtle"
            size="medium"
            className="hidden lg:flex"
          />
        </div>
      </div>
    </div>

    {/* Backgrounds */}
    <DotGrid dim="default" />
    <div
      class='absolute bottom-[10%] left-[10%] -z-10 aspect-square w-full translate-x-1/3 bg-[url("/assets/images/glow-orange.png")] bg-cover bg-center'
    >
    </div>
    <div
      class='absolute right-[10%] top-[10%] -z-10 aspect-square w-full -translate-x-1/3 bg-[url("/assets/images/glow-blueberry.png")] bg-cover bg-center'
    >
    </div>
  </section>
</Layout>
